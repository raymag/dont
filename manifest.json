{
    "manifest_version": 2,
    "name": "don't",
    "version": "1.0",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "description": "Blocks given domains for a given period of time, helping you to stay focused.",
    "permissions": [
        "activeTab",
        "storage"
      ],
    "browser_action": {
        "default_icon": "icons/icon-32.png",
        "default_title": "Don't",
        "default_popup": "popup/dont.html"
    },
    "content_scripts": [
        {    
            "matches": ["<all_urls>"],
            "js": ["dont.js"],
            "run_at": "document_end" 
        }
    ]
}